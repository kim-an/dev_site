<h3>Client: <%= @client.business_name %></h3>
<h4>Point of Contact: <%= @client.point_of_contact %></h4>

<h3>Campaigns</h3>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">Campaign Name</div>
    <div class="col-sm-4">Launch Date</div>
    <div class="col-sm-4"></div>
  </div>
<% @campaigns.each do |campaign| %>
  <div class="row">
    <div class="col-sm-4">
      <%= link_to campaign.campaign_name,
      campaign_path(campaign.id) %>
    </div>
    <div class="col-sm-4">
      <%= campaign.launch_date %>
    </div>
    <% if current_user && is_agency? %>
    <div class="col-sm-4">
      <%= link_to "Edit", edit_client_campaign_path(@client, campaign.id) %>
      <%= link_to "Delete", client_campaign_path(@client, campaign.id),
       method: :delete,
       data: { confirm: "Are you sure you want to delete #{campaign.campaign_name}? "} %>
    </div>
  </div>
    <% else %>
    <div class="col-sm-4" colspan="2"></div>
    <% end %>
<% end %>
</div>
<% if current_user && is_agency? %>
  <%= link_to "Create New Campaign", new_client_campaign_path(@client) %>
<% end %>
<%= link_to "Back", clients_path %>

