<h3>Client: <%= @client.business_name %></h3>
<h4>Point of Contact: <%= @client.point_of_contact %></h4>

<h3>Campaigns</h3>

<% if current_user && is_agency? %>
  <%= link_to "Create New Campaign", new_client_campaign_path(@client), class: "btn-primary btn-block"  %><br>
<% end %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">Campaign Name</div>
    <div class="col-sm-4">Launch Date</div>
    <div class="col-sm-4"></div>
  </div>
<% @campaigns.each do |campaign| %>
  <div class="row">
    <div class="col-sm-4">
      <%= link_to campaign.campaign_name,
      campaign_path(campaign.id) %>
    </div>
    <div class="col-sm-4">
      <%= campaign.launch_date.strftime("%-m/%-d/%Y") %>
    </div>
    <% if current_user && is_agency? %>
    <div class="col-sm-4">
      <%= link_to "Edit", edit_client_campaign_path(@client, campaign.id), class: "btn-primary" %>
      <%= link_to "Delete", client_campaign_path(@client, campaign.id), class: "btn-danger",
       method: :delete,
       data: { confirm: "Are you sure you want to delete #{campaign.campaign_name}? "} %>
    </div>
  </div>
    <% else %>
    <div class="col-sm-4" colspan="2"></div>
    <% end %>
<% end %>
</div>
<%= link_to "Back", clients_path, class: "btn-primary" %>

