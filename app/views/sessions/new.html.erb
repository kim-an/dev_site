<p id='alert'><%= alert %></p>

<div class="container">
  <div class="login" align="center">
    <h2>Log In</h2>
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :business_name %>
        <%= text_field_tag :business_name, params[:business_name] %>
      </div>

      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

  <div class="action" align="center"><%= submit_tag "Log In" %></div>

  <% end %>
  </div>
</div>
